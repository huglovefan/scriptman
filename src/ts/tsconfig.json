{
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"strict": true,
		"strictFunctionTypes": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"dom",
			"dom.iterable",
			"es2017",
			"es2017.object",
			"es2017.sharedmemory"
		],
		"plugins": [
			{
				"name": "tslint-language-service",
				"alwaysShowRuleFailuresAsWarnings": false,
				"ignoreDefinitionFiles": false,
				"configFile": "./tslint.json",
				"disableNoUnusedVariableRule": true,
				"supressWhileTypeErrorsPresent": false,
				"mockTypeScriptVersion": true
			}
		]
	}
}